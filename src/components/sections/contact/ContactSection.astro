---
import { Mail, MapPin, Phone, Github, Linkedin } from "lucide-react";
---

<section
  id="contact"
  class="px-4 sm:px-6 md:px-8 lg:px-10 mt-16 sm:mt-24 md:mt-32"
>
  <div class="mb-8 sm:mb-10">
    <h2
      class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-neutral-900"
    >
      Let's build something solid
    </h2>
    <div
      class="h-1 sm:h-1.5 mt-2 w-74 sm:w-80 md:w-100 lg:w-158 bg-linear-to-r from-blue-600 to-cyan-500 rounded-full"
    >
    </div>
  </div>

  {/* Main Container */}
  <div
    class="backdrop-blur-3xl bg-linear-to-br from-white/40 to-white/20 border border-white/50 rounded-2xl
          sm:rounded-3xl p-4 sm:p-6 md:p-8 lg:p-8 shadow-2xl"
  >
    <div class="grid lg:grid-cols-2 gap-6 sm:gap-8 lg:gap-12">
      {/* Left Content - Profile Card */}
      <div>
        {/* Profile Header */}
        <div class="p-4 flex flex-col sm:flex-row gap-4 sm:gap-5">
          {/* Avatar */}
          <div
            class="bg-linear-to-br from-blue-500 to-cyan-500 w-16 h-16 sm:w-20 sm:h-20 rounded-full shadow-lg
                    flex items-center justify-center text-white text-xl sm:text-2xl font-bold shrink-0"
          >
            CC
          </div>

          {/* Personal Info */}
          <div>
            <h3
              class="text-xl sm:text-2xl font-bold text-neutral-900 leading-tight"
            >
              Cristóbal Coronel
            </h3>
            <p class="text-blue-600 font-semibold mb-1 text-sm sm:text-base">
              Full-Stack Developer
            </p>
            <div class="flex items-center gap-1.5 text-sm text-neutral-600">
              <MapPin className="w-4 h-4 shrink-0" />
              <span>Chiapas, Mexico</span>
            </div>
          </div>
        </div>

        {/* Description or CTA */}
        <div
          class="bg-white/15 backdrop-blur-sm rounded-xl sm:rounded-2xl p-4 sm:p-5 mt-3 border border-white/30"
        >
          <h4 class="text-base sm:text-lg font-semibold text-slate-800 mb-2">
            Let's Connect
          </h4>
          <p class="text-slate-600 text-sm leading-relaxed">
            Feel free to reach out through any of the channels listed. I'm
            always open to discussing new projects, creative ideas, or
            opportunities to be part of your vision.
          </p>
        </div>
      </div>

      {/* Right Content - Contact Methods */}
      <div class="space-y-4">
        <h3 class="text-lg sm:text-xl font-bold text-slate-800 mb-4 sm:mb-5">
          Contact Information
        </h3>

        {/* Contact Cards Grid */}
        <div class="grid grid-cols-1 xl:grid-cols-2 gap-3 sm:gap-4">
          {/* Email */}
          <div
            id="email-contact"
            data-email="cristobal.coronelchambe@outlook.com"
            class="flex items-start gap-3 sm:gap-4 p-4 sm:p-5 rounded-xl bg-white/25 backdrop-blur-sm
            border border-white/40 hover:bg-white/35 hover:scale-[1.02] active:scale-[0.98] transition-all duration-300 cursor-pointer"
          >
            <div
              class="w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-linear-to-br
              from-blue-500/20 to-cyan-500/20 flex items-center justify-center shrink-0"
            >
              <Mail className="w-5 h-5 sm:w-6 sm:h-6 text-blue-600" />
            </div>
            <div class="min-w-0 flex-1">
              <p
                class="text-xs font-medium text-slate-500 uppercase tracking-wide mb-1"
              >
                Email
              </p>
              <p
                class="text-slate-800 font-medium text-xs sm:text-sm break-all sm:wrap-break-word"
              >
                cristobal.coronelchambe@outlook.com
              </p>
            </div>
          </div>

          {/* Phone */}
          <div
            id="phone-contact"
            data-phone="+52 961 348 1926"
            class="flex items-start gap-3 sm:gap-4 p-4 sm:p-5 rounded-xl bg-white/25 backdrop-blur-sm
            border border-white/40 hover:bg-white/35 hover:scale-[1.02] active:scale-[0.98] transition-all duration-300 cursor-pointer"
          >
            <div
              class="w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-linear-to-br
              from-green-500/20 to-emerald-500/20 flex items-center justify-center shrink-0"
            >
              <Phone className="w-5 h-5 sm:w-6 sm:h-6 text-green-600" />
            </div>
            <div class="min-w-0 flex-1">
              <p
                class="text-xs font-medium text-slate-500 uppercase tracking-wide mb-1"
              >
                Phone
              </p>
              <p class="text-slate-800 font-medium text-xs sm:text-sm">
                +52 961 348 1926
              </p>
            </div>
          </div>

          {/* GitHub */}
          <a
            href="https://github.com/BenelIT"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub profile"
            class="flex items-start gap-3 sm:gap-4 p-4 sm:p-5 rounded-xl bg-white/25 backdrop-blur-sm
            border border-white/40 hover:bg-white/35 hover:scale-[1.02] active:scale-[0.98] transition-all duration-300 cursor-pointer"
          >
            <div
              class="w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-linear-to-br
              from-gray-500/20 to-slate-500/20 flex items-center justify-center shrink-0"
            >
              <Github className="w-5 h-5 sm:w-6 sm:h-6 text-gray-700" />
            </div>
            <div class="min-w-0 flex-1">
              <p
                class="text-xs font-medium text-slate-500 uppercase tracking-wide mb-1"
              >
                GitHub
              </p>
              <p class="text-slate-800 font-medium text-xs sm:text-sm">
                @BenelIT
              </p>
            </div>
          </a>

          {/* LinkedIn */}
          <a
            href="https://www.linkedin.com/in/cristobalcoronelchambe/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn profile"
            class="flex items-start gap-3 sm:gap-4 p-4 sm:p-5 rounded-xl bg-white/25 backdrop-blur-sm
            border border-white/40 hover:bg-white/35 hover:scale-[1.02] active:scale-[0.98] transition-all duration-300 cursor-pointer"
          >
            <div
              class="w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-linear-to-br
              from-blue-600/20 to-blue-700/20 flex items-center justify-center shrink-0"
            >
              <Linkedin className="w-5 h-5 sm:w-6 sm:h-6 text-blue-700" />
            </div>

            <div class="min-w-0 flex-1">
              <p
                class="text-xs font-medium text-slate-500 uppercase tracking-wide mb-1"
              >
                LinkedIn
              </p>
              <p class="text-slate-800 font-medium text-xs sm:text-sm">
                Cristóbal Coronel Chambé
              </p>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { toast } from "sonner";

  // Email contact
  const emailContact = document.getElementById("email-contact");
  if (emailContact) {
    emailContact.addEventListener("click", () => {
      const email = emailContact.dataset.email;
      if (email) {
        navigator.clipboard.writeText(email);
        toast.success("Email copied to clipboard");
      }
    });
  }

  // Phone contact
  const phoneContact = document.getElementById("phone-contact");
  if (phoneContact) {
    phoneContact.addEventListener("click", () => {
      const phone = phoneContact.dataset.phone;
      if (phone) {
        navigator.clipboard.writeText(phone);
        toast.success("Phone number copied to clipboard");
      }
    });
  }
</script>
