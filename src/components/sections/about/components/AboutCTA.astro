---
import { Button } from "@/components/ui/moving-border";
import { Button as ShadcnButton } from "@/components/ui/button";
import { ArrowRight, Download } from "lucide-react";
---

<div
  class="h-30 md:h-30 items-center flex flex-col md:flex-row w-full md:w-85 gap-2 md:gap-3 py-3 md:py-0"
>
  <Button
    client:load
    containerClassName="h-11 w-full md:w-auto"
    borderRadius="0.75rem"
    duration={2000}
    className="bg-white/40 backdrop-blur-xl border-white/60 text-blue-950 font-bold hover:bg-white/50 hover:shadow-2xl hover:shadow-blue-400/40 transition-all duration-300 hover:scale-[1.02] w-full md:w-auto"
  >
    <span class="flex items-center justify-center gap-2 group px-4">
      View Projects
      <ArrowRight
        className="h-4 w-4 group-hover:translate-x-1 transition-transform"
      />
    </span>
  </Button>

  <ShadcnButton
    size="lg"
    variant="outline"
    className="border border-blue-200 hover:bg-blue-50 dark:hover:bg-blue-900/20 backdrop-blur-sm bg-white/30 transition-all duration-300 hover:-translate-y-0.5 group w-full md:w-auto"
  >
    <a
      href="/cv/CV_Cristobal_Coronel_Chambe.pdf"
      download
      class="flex items-center justify-center"
    >
      <Download
        className="mr-2 h-4 w-4 group-hover:translate-y-0.5 transition-transform"
      />
      Download CV
    </a>
  </ShadcnButton>
</div>
