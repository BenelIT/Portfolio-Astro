---
import { Code2, Layers, ShieldCheck, UserCheck } from "lucide-react";

import AboutCTA from "./components/AboutCTA.astro";
import { backendTechStack, frontendTechStack } from "./data/techStackData";
import ProfileHeader from "@/components/shared/ProfileHeader.astro";
import { TechStackCarousel } from "./components/TechStackCarousel";
---

<section
  id="about"
  class="px-4 sm:px-6 md:px-8 lg:px-10 my-16 sm:my-20 md:my-32 animate-fade-in-up"
>
  {/* Profile Card */}
  <div
    class="backdrop-blur-3xl bg-linear-to-br flex flex-col lg:flex-row gap-6 md:gap-8 lg:gap-10 xl:gap-12 from-white/40 to-white/20
        border border-white/50 rounded-2xl md:rounded-3xl p-6 md:p-7 lg:p-8 shadow-2xl"
  >
    {/* Left Content */}
    <div class="w-full lg:w-auto lg:shrink-0">
      {/* Top content */}
      <ProfileHeader />

      {/* CTA */}
      <AboutCTA />
    </div>

    {/* Right Content */}
    <div
      class="bg-white/20 w-full lg:flex-1 lg:min-w-0 rounded-xl md:rounded-2xl p-5 md:p-6 backdrop-blur-sm border border-white/30 flex flex-col"
    >
      {/* About Me Box */}
      <div class="space-y-3 flex-1">
        {/* Header */}
        <div class="flex items-center gap-2">
          <Code2 className="w-5 h-5 text-blue-600 shrink-0" />
          <h3 class="text-lg md:text-xl font-bold text-neutral-900">
            About Me
          </h3>
        </div>

        {/* Paragraphs */}
        <p class="text-sm md:text-base text-neutral-700 leading-relaxed">
          I care a lot about how code is read, not just how it runs. Since I
          value teamwork, I prefer writing clear and maintainable code that
          others can easily understand, even if that means choosing readability
          over saving a few lines.
        </p>

        <p class="text-sm md:text-base text-neutral-700 leading-relaxed">
          I work across the full stack, but I'm especially drawn to frontend
          because that's where the user feels the product. I enjoy thinking
          about flows and small details that make things easier and more natural
          for the people using what we build.
        </p>
      </div>

      {/* Professional signals */}
      <div class="flex flex-wrap gap-3 md:gap-4 mt-6">
        <div
          class="flex items-center gap-2 text-xs md:text-sm font-medium text-neutral-800"
        >
          <ShieldCheck className="w-4 h-4 text-blue-600 shrink-0" />
          <span class="whitespace-nowrap">Reliability</span>
        </div>

        <div
          class="flex items-center gap-2 text-xs md:text-sm font-medium text-neutral-800"
        >
          <Layers className="w-4 h-4 text-blue-600 shrink-0" />
          <span class="whitespace-nowrap">Long-term thinking</span>
        </div>

        <div
          class="flex items-center gap-2 text-xs md:text-sm font-medium text-neutral-800"
        >
          <UserCheck className="w-4 h-4 text-blue-600 shrink-0" />
          <span class="whitespace-nowrap">User-centered mindset</span>
        </div>
      </div>
    </div>
  </div>

  {/* Quick Stats */}
  <div class="grid grid-cols-1 sm:grid-cols-2 mt-6 gap-4 md:gap-5 lg:gap-6">
    <div
      class="backdrop-blur-xl bg-white/30 border border-white/50 rounded-xl md:rounded-2xl p-5 md:p-6 text-center"
    >
      <TechStackCarousel
        client:load
        techStack={backendTechStack}
        title="Backend & Tools"
        iconName="layers"
      />
    </div>
    <div
      class="backdrop-blur-xl bg-white/30 border border-white/50 rounded-xl md:rounded-2xl p-5 md:p-6 text-center"
    >
      <TechStackCarousel
        client:load
        techStack={frontendTechStack}
        title="Frontend"
        iconName="monitor"
      />
    </div>
  </div>
</section>
