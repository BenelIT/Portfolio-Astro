---
import { ProjectsGrid } from "./components/ProjectsGrid";
---

<section id="projects" class="px-4 sm:px-6 md:px-8 lg:px-10">
  <div class="max-w-7xl mx-auto mb-12">
    <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-neutral-900">
      My Projects
    </h2>
    <div
      class="h-1 sm:h-1.5 mt-2 w-44 sm:w-60 md:w-70 lg:w-74 bg-linear-to-r from-blue-600 to-cyan-500 rounded-full"
    >
    </div>
    <p class="text-base sm:text-lg text-neutral-600 max-w-3xl leading-relaxed">
      Projects focused on clean architecture, readable code, and real-world use
      cases
    </p>
  </div>

  {/* Projects Grid */}
  <ProjectsGrid client:load />
</section>
